<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asociacionfortin.pueblosmgicos.Perfil">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorFondo">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/photo_user_root"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="40dp" />

        <TextView
            android:id="@+id/textUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="15dp"
            android:text="Adolfo Ordinola"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textUserEstado"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/textUser"
            android:text="Quisiera cambiar al mundo, pero Dios no me prestaría el código fuente." />
    </RelativeLayout>
</FrameLayout>
