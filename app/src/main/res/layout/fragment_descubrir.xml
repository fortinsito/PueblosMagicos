<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asociacionfortin.pueblosmgicos.Descubrir">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonUbicacion"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_ubicacion_24dp"
                android:layout_weight="1"
                android:elevation="1dp"
                android:paddingTop="22dp"
                android:text="Cercanos"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <Button
                android:id="@+id/buttonPopulares"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_popular_24dp"
                android:layout_weight="1"
                android:elevation="1dp"
                android:paddingTop="22dp"
                android:text="Populares"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <Button
                android:id="@+id/buttonEstados"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_estados_24dp"
                android:layout_weight="1"
                android:elevation="1dp"
                android:paddingTop="22dp"
                android:text="Estados"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <GridView

                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="90dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"





                />
        </ScrollView>
    </RelativeLayout>
</FrameLayout>
